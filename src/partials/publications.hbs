{{#if resume.publications.length}}
<div class="container publications-container">
    {{> title value="Publications"}}

    {{#each resume.publications}}
    <section class="item">
        {{> section-header name=this.publisher}}

        {{#if publisher}}
        <h5 class="awarder">{{name}}</h5>
        {{/if}}

        {{#if summary}}
          <p class="summary">{{{markdown summary}}}</p>
        {{/if}}

    </section>
    {{/each}}
</div>
{{/if}}
